<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/alert_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Funcionalidades Premium"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/support_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soporte técnico: 2,99 €/mes" />

        <CheckBox
            android:id="@+id/premium_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experiencia premium: 4,99 €/mes" />

        <CheckBox
            android:id="@+id/charity_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caridad para la empresa, porque el jefe necesita su 3º yate: 19,99€/mes" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
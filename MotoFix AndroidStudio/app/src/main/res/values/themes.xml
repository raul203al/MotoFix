<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MotoFix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="tittleContainer">
        <item name="android:layout_width"> 300dp </item>
        <item name="android:translationX">55dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">@drawable/rounder_corner</item>
    </style>

    <style name="tittleText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/aqua</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="fieldContainer">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/rounder_corner</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="textContainer">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColorHint">@color/lightWhite</item>
        <item name="boxStrokeColor">@color/aqua</item>
        <item name="hintTextColor">@color/aqua</item>
    </style>

    <style name="fieldInputText">
        <item name="android:textColor">@color/lightWhite</item>
        <item name="hintTextColor">@color/lightWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@color/gray</item>
    </style>

    <style name="passContainer" parent="textContainer">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/aqua</item>
    </style>

    <style name="fieldInputTextPass">
        <item name="android:textColor">@color/lightWhite</item>
        <item name="hintTextColor">@color/lightWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="buttonRegister">
        <item name="android:textColor">@color/lightWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>
    <style name="Theme.MotoFix.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MotoFix.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MotoFix.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>